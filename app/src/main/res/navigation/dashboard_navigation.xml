<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation"
    app:startDestination="@+id/fragmentAdminDashboard">

<!--    Dashboard Destinations for ADMIN-->

    <fragment
        android:id="@+id/fragmentAdminDashboard"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.dashboard.admin.FragmentAdminDashboard"
        android:label="fragment_admin_dashboard"
        tools:layout="@layout/fragment_admin_dashboard" >

        <action
            android:id="@+id/action_fragmentAdminDashboard_to_fragmentAddPlace"
            app:destination="@id/fragmentAddPlace"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_fragmentAdminDashboard_to_fragmentAddWarehouse"
            app:destination="@id/fragmentAddWarehouse"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/fragmentAddPlace"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.nfc.FragmentAddPlace"
        android:label="fragment_add_place"
        tools:layout="@layout/fragment_add_place" />

    <fragment
        android:id="@+id/fragmentAddWarehouse"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.warehouse.FragmentAddWarehouse"
        android:label="fragment_add_warehouse"
        tools:layout="@layout/fragment_add_warehouse" />

</navigation>