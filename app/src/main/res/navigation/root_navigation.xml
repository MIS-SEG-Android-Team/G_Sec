<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_navigation"
    app:startDestination="@+id/fragmentSplashscreen">

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.authentication.login.FragmentLogin"
        android:label="fragment_fragment_login"
         tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_fragmentLogin_to_fragmentSignUp"
            app:destination="@id/fragmentSignUp"
            app:enterAnim="@anim/anim_pop_in"
            app:exitAnim="@anim/anim_pop_out"
            app:popEnterAnim="@anim/anim_pop_in"
            app:popExitAnim="@anim/anim_pop_out" />

        <action
            android:id="@+id/action_fragmentLogin_to_fragmentForgotPassword"
            app:destination="@id/fragmentForgotPassword"
            app:enterAnim="@anim/anim_pop_in"
            app:exitAnim="@anim/anim_pop_out"
            app:popEnterAnim="@anim/anim_pop_in"
            app:popExitAnim="@anim/anim_pop_out" />
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentAdminDashboard"
            app:destination="@id/fragmentAdminDashboard" />

    </fragment>

    <fragment
        android:id="@+id/fragmentForgotPassword"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.authentication.forgotpassword.FragmentForgotPassword"
        android:label="@string/label_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/fragmentSignUp"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.authentication.signup.FragmentSignUp"
        android:label="@string/label_create_account"
        tools:layout="@layout/fragment_sign_up" />

    <fragment
        android:id="@+id/fragmentSplashscreen"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.splashscreen.FragmentSplashscreen"
        android:label="fragment_splashscreen"
        tools:layout="@layout/fragment_splashscreen" >
        <action
            android:id="@+id/action_fragmentSplashscreen_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:enterAnim="@anim/anim_pop_in"
            app:exitAnim="@anim/anim_pop_out"
            app:popEnterAnim="@anim/anim_pop_in"
            app:popExitAnim="@anim/anim_pop_out" />
        <action
            android:id="@+id/action_fragmentSplashscreen_to_fragmentAdminDashboard"
            app:destination="@id/fragmentAdminDashboard" />
    </fragment>

<!--    Dashboard Destinations for ADMIN-->

    <fragment
        android:id="@+id/fragmentAdminDashboard"
        android:name="org.rmj.guanzongroup.gsecurity.ui.screens.dashboard.admin.FragmentAdminDashboard"
        android:label="fragment_admin_dashboard"
        tools:layout="@layout/fragment_admin_dashboard" />

</navigation>