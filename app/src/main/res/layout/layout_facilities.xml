<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_timesched"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="10dp"
            app:icon="@drawable/baseline_warehouse_24"
            app:iconSize="30dp"
            app:layout_constraintWidth_percent=".150"
            app:layout_constraintHeight_percent="1.100"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/PrimaryHeaderStyle"
            android:id="@+id/mtv_facilityname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="WareHouse Front"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_timesched"
            app:layout_constraintWidth_percent=".460"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/DescriptionHeaderStyle"
            android:id="@+id/mtv_lastvisit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Last visited by Guillier Gutoman"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toEndOf="@+id/btn_timesched"
            app:layout_constraintTop_toBottomOf="@+id/mtv_facilityname"
            app:layout_constraintWidth_percent=".460"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/DescriptionHeaderStyle"
            android:id="@+id/mtv_timesvisit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Visited 3 Times Last June 15, 2023"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".330"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>